package ejer3;
import java.util.Scanner;
public class Estadistica {
    private double[] numeros;  

   
    public Estadistica(double[] numeros) {
        this.numeros = numeros;
    }

    
    public double promedio() {
        double suma = 0;
        for (double num : numeros) {
            suma =suma+ num;
        }
        return suma / numeros.length;
    }

    
    public double desviacion() {
        double media = promedio();
        double suma = 0;
        for (double num : numeros) {
            suma =suma+ Math.pow(num - media, 2);
        }
        return Math.sqrt(suma / numeros.length);
    }
}
//main
package ejer3;
import java.util.Scanner;

public class main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        double[] datos = new double[10];

        System.out.println("Ingrese 10 numeros:");
        for (int i = 0; i < 10; i++) {
            datos[i] = sc.nextDouble();
        }

        Estadistica est = new Estadistica(datos); 

        System.out.printf("Promedio = %.2f%n", est.promedio());
        System.out.printf("Desviacion estandar = %.2f%n", est.desviacion());

        sc.close();
    }
}
